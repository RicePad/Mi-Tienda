
<div class="row">
	<div class="col-md-8">
		<div class="panel panel-default">
			<div class="panel-body">
				<h3><%= @gig_item.title %></h3>
				</hr>
				<%= image_tag @gig_item.main_image %>
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4>
					<%= @gig_item.description %>
					<% if current_user.is_a?(User) %> 
						<%= link_to 'Edit Gig', edit_gig_path, class: "btn btn-success" %>
				<% end %>
				</h4>
			</div>
			<div class="panel-body">
				<p><%= @gig_item.title %></p>
				

			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4> Review </h4>
			</div>
			<ul>
				<li class="list-group-item">
					<div class="row">
						<div class="col-md-2">
							<%= image_tag 'avatar.png', style: "height: 60; width: 60" %>
						</div>
						<div class="col-md-10">
							<h5>RicePad Customer</h5>
							<p>Great Job. This guy is awesome!</p>
						</div>
					</div>
				</li>
			</ul>
		</div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-body">
			<!-- render payment form from braintree -->				
				<%= render 'purchases/payment_form'%>
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-body">
				<%= image_tag 'avatar.png', style:"width: 100; height: 100" %>
				<%= link_to "Send Message", chatroom_path, class: "btn btn-success"%>
				<h4 class="text-center"> RicePad</h4>
				<hr />
				<p>I have 3 years of experience in Python/Django and ReactJS. I'm a cool girl! Haha</p>
			<% if @gig_item.categories.any? %>
		         <p>Categories: <%= render @gig_item.categories %></p>
		       <% end %>
			</div>
		</div>
	</div>
</div>