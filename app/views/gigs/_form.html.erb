<%= form_for(@gig_item) do |f| %>
	<% @gig_item.errors.full_messages.each do |error|%>

        <li><%= error %></li>
<% end %>
<div class="panel panel-default">
	<div class="panel-body">
		
        <div class="form-horizontal">
		  <div class="form-group">
		      <%= f.label :title, class: "col-sm-2 control-label" %>
		   <div class="col-sm-10">
		      <%= f.text_field :title, class: "form-control", rows: "3"%>	
		   </div>
  		 </div>
  		 <div class="form-group">
		 	<%= f.label :category, class: "col-sm-2 control-label" %> 
		 	<div class="col-sm-10">
		    	<%= f.text_field :category, class: "form-control" %>     
		    </div>     
         
        </div>
        <div class="form-group">
        	<%= f.label :description, class: "col-sm-2 control-label" %>
        	<div class="col-sm-10">
        	<%= f.text_area :description, class: "form-control", rows: "5" %>
        	</div>
        </div>
        <div class="form-group">
        	<%= f.label :price, class: "col-sm-2 control-label" %>
        	<div class="col-sm-10">
        	<%= f.text_field :price %>
        	</div>
        </div>
         <div class="form-group">
        	<%= f.label :status, class: "col-sm-2 control-label" %>
        	<div class="col-sm-10">
        	<%= f.text_field :status %>
        	</div>
        </div>
        <div class="form-group">
        	<%= f.label :main_image, class: "col-sm-2 control-label" %>
        	<div class="col-sm-10">
        	<%= f.text_field :main_image, class: "form-control" %>
        	</div>
        </div>
        <div class="form-group">
        	<%= f.label :thumb_image, class: "col-sm-2 control-label" %>
        	<div class="col-sm-10">
        	<%= f.text_field :thumb_image, class: "form-control" %>
        	</div>
        </div>
        <div class="form-group">
        	<div class="col-sm-offset-2 col-sm-10">
        		<%= f.submit "Submit", class: "btn btn-success btn-block"%>
        	</div>
        </div>
        
  		 
		</div>
	</div>
</div>

<% end %>
